# Application Configuration
NODE_ENV=production
APP_PORT=3000
PORT=3000
LOG_LEVEL=info

# PostgreSQL Database Configuration
# For External Database Connection
POSTGRES_HOST=your-external-db-host.com  # Replace with your external DB host
POSTGRES_PORT=5432
POSTGRES_DB=supercharts  # Replace with your database name
POSTGRES_USER=supercharts_user  # Replace with your database user
POSTGRES_PASSWORD=your_secure_password_here  # Replace with your database password

# Optional: Full connection string (overrides individual settings above)
# DATABASE_URL=postgresql://user:password@host:port/database

# External port for PostgreSQL (only used with local docker-compose.yml)
POSTGRES_EXTERNAL_PORT=5432

# Application Keys and Secrets
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# Webhook Configuration
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook

