{
  "name": "trading-dashboard",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@microsoft/signalr": "^9.0.6",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.6.2",
    "framer-motion": "^10.16.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "npm start",
    "start:clean": "bash scripts/start-dev.sh",
    "start:clean:windows": "scripts\\start-dev.bat",
    "clean:ports": "lsof -ti:3000 | xargs kill -9 || true",
    "clean:ports:windows": "for /f \"tokens=5\" %a in ('netstat -ano | findstr :3000') do taskkill /PID %a /F",
    "prebuild": "npm run clean:ports",
    "build:analyze": "npm run build && npx serve -s build",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md}"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
